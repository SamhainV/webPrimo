---

<Layout title="Imprimir números primos">
  <form
    action="/getPrimo"
    method="get"
    class="max-w-md mx-auto mt-10 p-6 bg-white shadow-lg rounded-xl"
  >
    <label for="numero" class="block text-lg font-semibold text-gray-700 mb-2"
      >Introduce un número:</label
    >
    <input
      type="number"
      id="numero"
      name="numero"
      required
      class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
    <button
      type="submit"
      class="mt-4 w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300"
    >
      Enviar
    </button>
  </form>
</Layout>
